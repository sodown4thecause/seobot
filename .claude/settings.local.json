{
  "permissions": {
    "allow": [
      "Bash(npx tsc --noEmit)",
      "Bash(npx tsc --noEmit --pretty)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git checkout -b feature/*)",
      "Bash(git checkout -b fix/*)",
      "Bash(git checkout main)",
      "Bash(git add .)",
      "Bash(git add lib/*)",
      "Bash(git commit -F .claude/templates/commit-message.txt)",
      "Bash(git push -u origin feature/*)",
      "Bash(git push -u origin fix/*)",
      "Bash(gh pr create --title-file .claude/templates/pr-title.txt --body-file .claude/templates/pr-body.md)",
      "Bash(gh pr view *)",
      "Bash(gh pr edit *)",
      "Bash(cat .claude/templates/*)"
    ]
  }
}
